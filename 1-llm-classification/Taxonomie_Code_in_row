function categorizeQuery(query: string) -> string: { if (containsExplicitTime(query)) return "explicit-time"; if (refersToEvent(query)) return "event"; if (isTimeIndependent(query)) return "time-independent"; if (requiresTimeliness(query)) return "timeliness"; return "unknown"; } function containsExplicitTime(query: string) -> bool: { return regexMatch(query, r'\b\d{4}\b') || containsSpecificDate(query); } function refersToEvent(query: string) -> bool: { return ["festival", "inauguration", "eruption", "landing"].some(keyword => query.toLowerCase().includes(keyword)); } function isTimeIndependent(query: string) -> bool: { return ["what is", "definition of", "recipe", "rules of"].some(keyword => query.toLowerCase().includes(keyword)); } function requiresTimeliness(query: string) -> bool: { return ["weather", "stock market", "standings", "open now"].some(keyword => query.toLowerCase().includes(keyword)); } function main(): { let query = "Turkey"; let category = categorizeQuery(query); console.log("Die Anfrage geh√∂rt zur Kategorie:", category); } main();
